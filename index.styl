*
  box-sizing border-box

html
  font-size 1em

body
  margin 0

ul
  list-style none
  padding 0
  margin 0

.header
  text-align center

.main
  width 80em
  margin 0 auto

.post-section,
.team-section
  margin 2em 0

.post
  &-section
    background lavender

  &-list
    display flex
    flex-wrap wrap

  &-item
    width 50%
    padding 1em

  &-link
    display flex
    flex-wrap wrap
    align-items center
    justify-content center

  &-img
    margin-right 0.6em

  &-title
    flex 0 1 100%
    margin 0
    text-align center

.team
  &-title
    text-align center

  &-list
    display flex
    flex-wrap wrap

.member
  &-item
    position relative
    display flex
    flex-direction column
    align-items center
    width 25%

    .member-img,
    .member-gif
      transition opacity 0.3s ease-in-out

    &:hover
      .member-img
        opacity 0

      .member-gif
        opacity 1

  &-profile
    width 11.2em
    height 100%
    background url("https://via.placeholder.com/190x260") no-repeat center

    &:hover
      background url("https://via.placeholder.com/190x260/FFFF00/00000") no-repeat center

  &-gif
    position absolute
    left 50%
    transform translateX(-50%)
    top 0
    opacity 0

